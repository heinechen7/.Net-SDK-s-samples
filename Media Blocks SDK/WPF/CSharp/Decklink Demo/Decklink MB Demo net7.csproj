    <UseWPF>true</UseWPF>
  </PropertyGroup>
  <ItemGroup>
    <None Remove="visioforge_main_icon.ico" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="VisioForge.DotNet.MediaBlocks" Version="15.5.53" />
    <PackageReference Include="VisioForge.DotNet.Core.UI.WinForms" Version="15.5.53" />
    <PackageReference Include="VisioForge.DotNet.Core.UI.WPF" Version="15.5.53" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="VisioForge.CrossPlatform.Codecs.Windows.x64" Version="1.22.1.2" />
    <PackageReference Include="VisioForge.CrossPlatform.Core.Windows.x64" Version="1.22.1.2" />
