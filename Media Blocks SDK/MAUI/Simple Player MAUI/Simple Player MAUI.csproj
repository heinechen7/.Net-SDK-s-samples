	  </AndroidNativeLibrary>
	</ItemGroup>-->
  <ItemGroup>
    <PackageReference Include="SkiaSharp.Views.Maui.Controls" Version="2.88.3" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="VisioForge.DotNet.MediaPlayer" Version="15.5.16" />
    <PackageReference Include="VisioForge.DotNet.Core.UI.MAUI" Version="15.5.16" />
  </ItemGroup>
</Project>
