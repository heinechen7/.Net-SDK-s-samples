<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net6.0-windows</TargetFramework>
    <RootNamespace>MediaBlocks_Simple_Video_Capture_Demo</RootNamespace>
    <PlatformTarget>x64</PlatformTarget>
    <ApplicationIcon>visioforge_main_icon.ico</ApplicationIcon>
    <UseWindowsForms>true</UseWindowsForms>
    <ApplicationManifest>app.manifest</ApplicationManifest>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <Optimize>False</Optimize>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <Optimize>True</Optimize>
  </PropertyGroup>
  <ItemGroup>
    <Content Include="visioforge_main_icon.ico" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="VisioForge.GStreamer.Codecs.Windows.x64" Version="1.20.1" />
    <PackageReference Include="VisioForge.GStreamer.Core.Windows.x64" Version="1.20.1" />
    <PackageReference Include="VisioForge.GStreamer.Libav.Windows.x64.UPX" Version="1.20.1" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="VisioForge.DotNet.MediaBlocks" Version="15.3.40" />
    <PackageReference Include="VisioForge.DotNet.Core.UI.WinForms" Version="15.3.40" />
  </ItemGroup>
  <ItemGroup>
    <NativeLibs Remove="app.manifest" />
  </ItemGroup>
</Project>
